# =============================================================================
# AI Collection Email Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# LangSmith Configuration (Optional - for debugging and observability)
# -----------------------------------------------------------------------------
# Enable LangSmith tracing to monitor LLM calls, tokens usage, and workflow execution
LANGSMITH_TRACING=true

# LangSmith API endpoint (default: https://api.smith.langchain.com)
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Your LangSmith API key from https://smith.langchain.com/settings
LANGSMITH_API_KEY=lsv2_pt_YOUR_API_KEY_HERE

# Project name in LangSmith for organizing traces
LANGSMITH_PROJECT=AI Collection Email Assistant

# -----------------------------------------------------------------------------
# OpenAI Configuration (Required)
# -----------------------------------------------------------------------------
# OpenAI API key for GPT-4 email classification
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# -----------------------------------------------------------------------------
# Email Provider Configuration - Zoho Mail
# -----------------------------------------------------------------------------
# Zoho MCP (Model Context Protocol) URL with authentication key
# Get this from your Zoho Mail MCP server setup
ZOHO_MCP_URL=https://your-zoho-instance.zohomcp.com/mcp/message?key=YOUR_KEY_HERE

# Your Zoho account ID (found in Zoho Mail API settings)
ZOHO_ACCOUNT_ID=YOUR_ACCOUNT_ID_HERE

# Label ID for marking processed emails (prevents re-processing)
# Create a label in Zoho Mail and use its ID here
# Leave empty to process all emails without filtering
ZOHO_PROCESSED_LABEL_ID=YOUR_LABEL_ID_HERE

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Email address to use in reply "From" field
REPLY_EMAIL_ADDRESS=your-reply-address@example.com

# Maximum number of unread emails to fetch per run (default: 10)
# Higher values = more emails processed but longer execution time
READ_EMAIL_LIMIT=10

# Enable debug mode for verbose logging (true/false)
DEBUG=false
